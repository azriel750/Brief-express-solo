<h1>Modifier l'annonce : <%= annonce.titre %></h1>

<form action="/Annonces/<%= annonce.id %>?_method=PUT" method="POST">
  <div>
    <label for="titre">Titre :</label>
    <input type="text" id="titre" name="titre" value="<%= annonce.titre %>" required>
  </div>

  <div>
    <label for="description">Description :</label>
    <textarea id="description" name="description" required><%= annonce.description %></textarea>
  </div>

  <div>
    <label for="lieu">Lieu :</label>
    <input type="text" id="lieu" name="lieu" value="<%= annonce.lieu %>" required>
  </div>

  <div>
    <label for="typeContrat">Type de contrat :</label>
    <input type="text" id="typeContrat" name="typeContrat" value="<%= annonce.typeContrat %>" required>
  </div>

  <div>
    <label for="salaire">Salaire :</label>
    <input type="text" id="salaire" name="salaire" value="<%= annonce.salaire %>">
  </div>

  <div>
    <label for="entrepriseNom">Entreprise :</label>
    <input type="text" id="entrepriseNom" name="entrepriseNom" value="<%= annonce.entreprise.nom %>" required>
  </div>

  <div>
    <label for="email">Email :</label>
    <input type="email" id="email" name="email" value="<%= annonce.entreprise.coordonnees.email %>">
  </div>

  <div>
    <label for="telephone">Téléphone :</label>
    <input type="text" id="telephone" name="telephone" value="<%= annonce.entreprise.coordonnees.telephone %>">
  </div>

  <div>
    <label for="adresse">Adresse :</label>
    <input type="text" id="adresse" name="adresse" value="<%= annonce.entreprise.coordonnees.adresse %>">
  </div>

  <button type="submit">Modifier l'annonce</button>
</form>

<a href="/Annonces/<%= annonce.id %>">Annuler</a>
